---
import ListViewFilterSort from "./ListViewFilterSort.astro";
import ListViewItems from "./ListViewItems.astro";

const { title, listItems } = Astro.props;
---

<div>
  <div
    class="l-center"
    style="--cr-max-width: var(--bp-48); --cr-padding: var(--global-padding);"
  >
    <div class="list-view">
      <div class="l-stack" style="--st-gap: var(--s6)">
        <h1>{title}</h1>

        <ListViewFilterSort />
        <ListViewItems />
      </div>
    </div>
  </div>
</div>

<style>
  .list-view {
    margin-top: var(--s12);
  }
</style>
