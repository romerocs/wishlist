---
const lists = await Astro.glob('../data/list/*.md');
---

<nav class="list-navigation">
  <ul role="list">
    {lists.map(list => <li><a href={`/lists/${list.frontmatter.slug}`}>{list.frontmatter.title}</a></li>)}
  </ul>
</nav>

<style>
  .list-navigation {
    min-width: 15.625rem;
  }
  .list-navigation > * {
    border: 1px solid white;
    border-left-width: 0px;
    border-right-width: 0px;
  }

  .list-navigation > * {
    margin: 0;
    padding: 0;
  }

  .list-navigation a {
    color: inherit;
    text-decoration: none;
    display: block;
    width: 100%;
    padding: var(--s-3) var(--s10) var(--s-3) var(--s0);
  }

  .list-navigation > * > *:not(:first-child) {
    border-top: 1px solid white;
  }
</style>
